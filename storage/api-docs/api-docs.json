{
    "openapi": "3.0.0",
    "info": {
        "title": "API V1 d'Authentification (Passport/Socialite)",
        "description": "Documentation de l'API d'authentification et de gestion des utilisateurs.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://127.0.0.1:8000/",
            "description": "Serveur API V1"
        }
    ],
    "paths": {
        "/api/v1/auth/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Enregistre un nouvel utilisateur",
                "description": "Crée un nouvel utilisateur et lui émet un jeton (token) d'accès Passport.",
                "operationId": "7ca6fc7989202054d29707fef91a2d4a",
                "requestBody": {
                    "description": "Données d'enregistrement de l'utilisateur",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Jean Dupont"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "jean.dupont@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "minLength": 8,
                                        "example": "secret123"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password",
                                        "minLength": 8,
                                        "example": "secret123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Utilisateur enregistré et jeton d'accès émis.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AuthTokenResponse"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Erreur de validation des données fournies.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ValidationErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Connecte un utilisateur",
                "description": "Authentifie un utilisateur avec son email et mot de passe, puis émet un jeton (token) d'accès Passport.",
                "operationId": "9d0bb5c770cbec19b0b9566606ef4adb",
                "requestBody": {
                    "description": "Identifiants de connexion",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "jean.dupont@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "secret123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Connexion réussie. Jeton d'accès émis.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AuthTokenResponse"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Identifiants invalides.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ValidationErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/user": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Récupère l'utilisateur authentifié",
                "description": "Nécessite un jeton Passport valide dans l'en-tête Authorization.",
                "operationId": "a4cddb112551ac7618446c14d9526d9c",
                "responses": {
                    "200": {
                        "description": "Informations de l'utilisateur authentifié",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/User"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Non autorisé (Jeton manquant ou invalide)"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/api/v1/auth/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Déconnecte l'utilisateur",
                "description": "Révoque le jeton d'accès (token) actuel de l'utilisateur, forçant la déconnexion.",
                "operationId": "3a27a9e02ceb521eb3f98c8d2394aef9",
                "responses": {
                    "200": {
                        "description": "Déconnexion réussie",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Logged out successfully"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Non autorisé (Jeton manquant ou invalide)"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/api/v1/auth/socialite/{provider}": {
            "get": {
                "tags": [
                    "Auth Socialite"
                ],
                "summary": "Redirection vers le fournisseur social",
                "description": "Lance le processus d'authentification en redirigeant l'utilisateur vers la page d'autorisation du fournisseur (Google, GitHub, etc.).",
                "operationId": "f6240f81b2df2e9cef17bbb8ec1dd97b",
                "parameters": [
                    {
                        "name": "provider",
                        "in": "path",
                        "description": "Nom du fournisseur social (ex: google, github)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "302": {
                        "description": "Redirection vers le fournisseur OAuth."
                    },
                    "400": {
                        "description": "Fournisseur non supporté ou erreur de configuration."
                    }
                }
            }
        },
        "/api/v1/auth/socialite/{provider}/callback": {
            "get": {
                "tags": [
                    "Auth Socialite"
                ],
                "summary": "Gestion du callback du fournisseur social",
                "description": "Point de terminaison appelé par le fournisseur OAuth après l'autorisation de l'utilisateur. Crée/met à jour l'utilisateur et émet un jeton (token) Passport.",
                "operationId": "b2da03bf7d17f7988d262b27c16b2125",
                "parameters": [
                    {
                        "name": "provider",
                        "in": "path",
                        "description": "Nom du fournisseur social (ex: google, github)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Authentification sociale réussie. Jeton d'accès émis.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AuthTokenResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Échec de la récupération des données utilisateur ou annulation par l'utilisateur."
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "AuthTokenResponse": {
                "title": "Auth Token Response",
                "description": "Réponse standard après connexion ou enregistrement",
                "properties": {
                    "token": {
                        "description": "Jeton d'accès (Access Token) Passport",
                        "type": "string"
                    },
                    "token_type": {
                        "type": "string",
                        "example": "Bearer"
                    },
                    "user": {
                        "$ref": "#/components/schemas/User"
                    }
                },
                "type": "object"
            },
            "User": {
                "title": "User Model",
                "description": "Schéma de base de l'utilisateur",
                "properties": {
                    "id": {
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Jean Dupont"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "jean.dupont@example.com"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "ValidationErrorResponse": {
                "title": "Validation Error Response",
                "description": "Réponse standard pour les erreurs de validation (code 422)",
                "properties": {
                    "message": {
                        "type": "string",
                        "example": "The given data was invalid."
                    },
                    "errors": {
                        "description": "Détails des erreurs de validation par champ",
                        "properties": {
                            "email": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "example": "The email has already been taken."
                                }
                            },
                            "password": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "example": "The password must be at least 8 characters."
                                }
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "passport": {
                "type": "http",
                "description": "Entrez votre jeton (token) Passport dans l'en-tête 'Authorization: Bearer [token]'",
                "bearerFormat": "Passport Token",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Auth"
        },
        {
            "name": "Auth Socialite",
            "description": "Auth Socialite"
        }
    ]
}