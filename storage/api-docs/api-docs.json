{
    "openapi": "3.0.0",
    "info": {
        "title": "API V1 d'Authentification (Passport/Socialite)",
        "description": "Documentation de l'API d'authentification et de gestion des utilisateurs.",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://127.0.0.1:8000/",
            "description": "Serveur API V1"
        }
    ],
    "paths": {
        "/api/v1/auth/register": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Enregistre un nouvel utilisateur",
                "description": "Crée un nouvel utilisateur, lui envoie un email de vérification et émet un jeton (token) d'accès.",
                "operationId": "5ffeaa26d701c3651dfc3a8479084184",
                "requestBody": {
                    "description": "Données d'enregistrement de l'utilisateur",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "email",
                                    "password",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Jude mpoyo"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "jude@gmail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "minLength": 8,
                                        "example": "secret123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Utilisateur enregistré. Un email de vérification a été envoyé.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AuthTokenResponse"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Erreur de validation des données fournies.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ValidationErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/login": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Connecte un utilisateur",
                "description": "Authentifie un utilisateur avec son email et mot de passe, puis émet un jeton (token) d'accès Passport. L'email doit être vérifié.",
                "operationId": "97d0fa1f733dead1980e640104204374",
                "requestBody": {
                    "description": "Identifiants de connexion",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "jude@gmail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "secret123"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Connexion réussie. Jeton d'accès émis.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AuthTokenResponse"
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "L'email n'est pas vérifié."
                    },
                    "422": {
                        "description": "Identifiants invalides.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/ValidationErrorResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/auth/email/verify/{id}/{hash}": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Vérifie l'adresse email de l'utilisateur",
                "description": "Marque l'email de l'utilisateur authentifié comme vérifié.",
                "operationId": "63e76b5a1bdccc66b10b7872932b33ec",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID de l'utilisateur",
                        "required": true,
                        "schema": {
                            "type": "integer"
                        }
                    },
                    {
                        "name": "hash",
                        "in": "path",
                        "description": "Hash de vérification",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Email vérifié avec succès."
                    },
                    "400": {
                        "description": "Le lien de vérification est invalide ou l'email est déjà vérifié."
                    }
                }
            }
        },
        "/api/v1/auth/email/verification-notification": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Renvoyer l'email de vérification",
                "description": "Envoie un nouvel email de vérification à l'utilisateur authentifié si son email n'est pas encore vérifié.",
                "operationId": "4cf48dd7bc38caec41189f25c3f6e555",
                "responses": {
                    "200": {
                        "description": "Email de vérification renvoyé."
                    },
                    "400": {
                        "description": "L'email est déjà vérifié."
                    },
                    "401": {
                        "description": "Non autorisé"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/api/v1/auth/user": {
            "get": {
                "tags": [
                    "Auth"
                ],
                "summary": "Récupère l'utilisateur authentifié",
                "operationId": "a23c8fc7323bb62036a82230dae1129d",
                "responses": {
                    "200": {
                        "description": "Utilisateur récupéré",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Utilisateur authentifié"
                                        },
                                        "data": {
                                            "$ref": "#/components/schemas/UserResource"
                                        },
                                        "errors": {
                                            "type": "object",
                                            "example": null,
                                            "nullable": true
                                        },
                                        "meta": {
                                            "type": "object",
                                            "example": null,
                                            "nullable": true
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Non autorisé"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/api/v1/auth/logout": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Déconnecte l'utilisateur",
                "operationId": "cf53777b1786575f52eb3cfd965c15a0",
                "responses": {
                    "200": {
                        "description": "Déconnexion réussie",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Déconnexion réussie"
                                        },
                                        "data": {
                                            "type": "object",
                                            "example": null,
                                            "nullable": true
                                        },
                                        "errors": {
                                            "type": "object",
                                            "example": null,
                                            "nullable": true
                                        },
                                        "meta": {
                                            "type": "object",
                                            "example": null,
                                            "nullable": true
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Non autorisé"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/api/v1/auth/refresh": {
            "post": {
                "tags": [
                    "Auth"
                ],
                "summary": "Rafraîchit le jeton d'accès",
                "description": "Rafraîchit le jeton d'accès de l'utilisateur authentifié.",
                "operationId": "18eda0c146bbb7b84dd85353173dd930",
                "responses": {
                    "200": {
                        "description": "Jeton rafraîchi avec succès.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AuthTokenResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Non autorisé"
                    }
                },
                "security": [
                    {
                        "passport": []
                    }
                ]
            }
        },
        "/api/v1/auth/socialite/{provider}": {
            "get": {
                "tags": [
                    "Auth Socialite"
                ],
                "summary": "Redirection vers le fournisseur social",
                "description": "Lance le processus d'authentification en redirigeant l'utilisateur vers la page d'autorisation du fournisseur (Google, GitHub, etc.).",
                "operationId": "ca76cfc5363b89233f0e60b78889116f",
                "parameters": [
                    {
                        "name": "provider",
                        "in": "path",
                        "description": "Nom du fournisseur social (ex: google, github)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "302": {
                        "description": "Redirection vers le fournisseur OAuth."
                    },
                    "400": {
                        "description": "Fournisseur non supporté ou erreur de configuration."
                    }
                }
            }
        },
        "/api/v1/auth/socialite/{provider}/callback": {
            "get": {
                "tags": [
                    "Auth Socialite"
                ],
                "summary": "Gestion du callback du fournisseur social",
                "description": "Point de terminaison appelé par le fournisseur OAuth après l'autorisation de l'utilisateur. Crée/met à jour l'utilisateur et émet un jeton (token) Passport.",
                "operationId": "a8327172ec2a560014b66f52c91b49e8",
                "parameters": [
                    {
                        "name": "provider",
                        "in": "path",
                        "description": "Nom du fournisseur social (ex: google, github)",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Authentification sociale réussie. Jeton d'accès émis.",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/AuthTokenResponse"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Échec de la récupération des données utilisateur ou annulation par l'utilisateur."
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "ApiResponse": {
                "properties": {
                    "success": {
                        "type": "boolean",
                        "example": true
                    },
                    "message": {
                        "type": "string",
                        "example": "Opération réussie"
                    },
                    "data": {
                        "type": "object",
                        "nullable": true
                    },
                    "errors": {
                        "type": "object",
                        "nullable": true
                    },
                    "meta": {
                        "description": "Informations de pagination si disponible",
                        "properties": {
                            "current_page": {
                                "type": "integer",
                                "example": 1
                            },
                            "per_page": {
                                "type": "integer",
                                "example": 15
                            },
                            "total": {
                                "type": "integer",
                                "example": 150
                            },
                            "last_page": {
                                "type": "integer",
                                "example": 10
                            }
                        },
                        "type": "object",
                        "nullable": true
                    }
                },
                "type": "object"
            },
            "AuthTokenResponse": {
                "title": "Réponse API standard pour Auth",
                "description": "Réponse standard après connexion ou enregistrement, avec structure ApiResponse",
                "properties": {
                    "success": {
                        "description": "Indique si l'action a réussi",
                        "type": "boolean",
                        "example": true
                    },
                    "message": {
                        "description": "Message lisible pour l'utilisateur",
                        "type": "string",
                        "example": "Connexion réussie"
                    },
                    "data": {
                        "description": "Données principales de la réponse",
                        "properties": {
                            "token": {
                                "description": "Jeton d'accès (Access Token) Passport",
                                "type": "string"
                            },
                            "token_type": {
                                "type": "string",
                                "example": "Bearer"
                            },
                            "user": {
                                "$ref": "#/components/schemas/UserResource"
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            },
            "UserResource": {
                "title": "Ressource Utilisateur",
                "description": "Représentation d'un utilisateur, incluant potentiellement son profil.",
                "properties": {
                    "id": {
                        "description": "ID unique de l'utilisateur",
                        "type": "integer",
                        "example": 1
                    },
                    "name": {
                        "description": "Nom complet de l'utilisateur",
                        "type": "string",
                        "example": "Jude mpoyo"
                    },
                    "email": {
                        "description": "Adresse e-mail",
                        "type": "string",
                        "format": "email",
                        "example": "jude@gmail.com"
                    },
                    "email_verified_at": {
                        "description": "Date de vérification de l'e-mail",
                        "type": "string",
                        "format": "date-time",
                        "nullable": true
                    },
                    "created_at": {
                        "description": "Date de création du compte",
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "description": "Date de dernière mise à jour du compte",
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "ValidationErrorResponse": {
                "title": "Erreur de validation standard",
                "description": "Réponse standard pour les erreurs de validation (code 422) avec structure ApiResponse",
                "properties": {
                    "success": {
                        "description": "Indique que l'action a échoué",
                        "type": "boolean",
                        "example": false
                    },
                    "message": {
                        "description": "Message général décrivant l'erreur",
                        "type": "string",
                        "example": "Les données fournies sont invalides."
                    },
                    "errors": {
                        "description": "Détails des erreurs de validation par champ",
                        "properties": {
                            "email": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "example": "L'email est déjà utilisé."
                                }
                            },
                            "password": {
                                "type": "array",
                                "items": {
                                    "type": "string",
                                    "example": "Le mot de passe doit contenir au moins 8 caractères."
                                }
                            }
                        },
                        "type": "object"
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "passport": {
                "type": "http",
                "description": "Entrez votre jeton (token) Passport dans l'en-tête 'Authorization: Bearer [token]'",
                "bearerFormat": "Passport Token",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Auth",
            "description": "Gestion de l'authentification et de la vérification d'email"
        },
        {
            "name": "Auth Socialite",
            "description": "Auth Socialite"
        }
    ]
}